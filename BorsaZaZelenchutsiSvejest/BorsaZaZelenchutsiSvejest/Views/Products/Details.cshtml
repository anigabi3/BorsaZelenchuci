@model BorsaZaZelenchutsiSvejest.Data.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Датайли за продукта</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Зеленчук
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Вид зеленчук
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeProducts.Name)
        </dd>
        <dt class = "col-sm-2">
            Каталожен номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatalogNumber)
        </dd>
        <dt class = "col-sm-2">
           Снимка
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageURL)" width="250"/>
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) лв.
        </dd>
        <dt class = "col-sm-2">
           Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Дата на промяна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
